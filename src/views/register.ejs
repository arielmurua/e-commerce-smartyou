<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

<body>
    
    <%- include('partials/header.ejs') %>

    <main>
        <div class="input-container">
            <form action="/user/register" method="post">
                <div class="input-container">
                    <label for="user">Usuario</label>
                    <input type="text" name="user" id="user">
                </div>
                <div class="input-container">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email">
                </div>
                <div class="input-container">
                    <label for="address">Domicilio</label>
                    <input type="text" name="address" id="address">
                </div>
                <div class="input-container">
                    <label for="avatar">Imagen de perfil</label>
                    <input type="file" name="avatar" id="avatar">
                </div>
                <div class="input-container">
                    <label for="paid-preference">Formas de pago preferidas</label>
                    <select name="paid-preference" id="paid-preference">
                        <option value="">Elige una forma de pago</option>
                        <option value="cash">Cash</option>
                        <option value="debit">Debito</option>
                        <option value="credit">Credito</option>
                        <option value="finace">Personal finace</option>
                    </select>
                </div>
                <div class="input-container">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password">
                </div>
                <div class="input-container">
                    <label for="password-repeat">Repetir Contraseña</label>
                    <input type="password" name="password-repeat" id="password-repeat">
                </div>
                <div class="btn">
                    <button type="submit">GUARDAR</button>
                    <button type="reset">BORRAR</button>
                </div>
            </form>
            <div class="reg-link">
                <p>Ya tenes cuenta? <a href="/user/login">INGRESA</a></p>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer.ejs') %> 

</body>
</html>